/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  
} 
page{
  background-color: #E4DADA;
}
.mine-head{
  background-color: #932525;
  display: flex;
  flex-direction: row;
}
.mine-head image{
  padding-left: 15rpx;
  height: 60rpx;
  width: 60rpx;
}
.mine-head-text{
  padding-left: 20rpx;
  color: white;
}
.mine-block{
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-bottom: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid grey;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.mine-block image{
  width: 60rpx;
  height: 60rpx;
}

.bottom-button{
  position: fixed;
  bottom:100rpx;
  left:75rpx;
  background-color: #932525;
  color: white;
  width: 80%;
}
